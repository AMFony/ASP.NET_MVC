@model BookPublishers.Models.Publisher
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3>Confirm Delete</h3>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.publisherName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.DisplayFor(x => x.publisherName, new { @class = "form-control form-control-sm" })

        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.stablishedDate, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.DisplayFor(x => x.stablishedDate, new { @class = "form-control form-control-sm" })

        </div>
    </div>
    
    <div class="form-group row mb-1">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.PublisherId)

            <div class="col-4 offset-2">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </div>
        }
    </div>
</div>





