@model IEnumerable<BookPublishers.Models.Author>
@{ ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h2>Authors</h2>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Add new", "Create", "Authors", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-bordered">
            <thead class="bg-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.AuthorName)</th>

                    <th>@Html.DisplayNameFor(x => x.MobileNo)</th>
                    <th></th>
                    <th>@Html.DisplayNameFor(x => x.Book.bookName)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => t.AuthorName)</td>
                        <td>@Html.DisplayFor(x => t.MobileNo)</td>
                        <td><img src="~/Assets/@t.picture" class="rounded-circle" style="width:50px" /></td>
                        <td>@Html.DisplayFor(x => t.Book.bookName)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Authors", new { id = t.AuthorId }, new { @class = "btn btn-secondary btn-sm" })
                            <a href="@Url.Action("Delete", "Authors", new {id=t.AuthorId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>