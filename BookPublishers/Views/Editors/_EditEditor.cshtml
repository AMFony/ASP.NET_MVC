@model BookPublishers.Models.Editor
@using (Ajax.BeginForm("EditEditor", "Editors", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    OnSuccess = "onSuccess",
    LoadingElementId = "spinner"
}, new { id = "f" }))
{
    @Html.HiddenFor(x => x.EditorId)
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Publisher, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.DropDownListFor(x => x.PublisherId, new SelectList(ViewBag.Publisher, "PublisherId", "publisherName"), "Select", new { @class = "form-select form-select-sm" })
            @Html.ValidationMessageFor(x => x.PublisherId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.EditorName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.EditorName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.EditorName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.MobileNo, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.MobileNo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}




